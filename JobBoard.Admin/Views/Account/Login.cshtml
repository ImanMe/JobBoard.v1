@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center text-muted">Login</h2>
        <p class="text-center text-muted">Use a local account to log in.</p>
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" cl class="text-muted"></label>
                <input asp-for="Email" cl class="form-control" />
                <span class="text-warning text-sm" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="text-muted"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-warning text-sm" asp-validation-for="Password"></span>
            </div>
            @*<div class="form-group">
                    <input asp-for="RememberMe" type="checkbox" class="" />
                    <label asp-for="RememberMe" class="text-muted"></label>
                    <span class="text-warning" asp-validation-for="RememberMe"></span>
                </div>*@
            <br />
            <button type="submit" class="btn btn-success btn-block">Sign in</button>
        </form>
    </div>
</div>




@section Scripts{
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
}
